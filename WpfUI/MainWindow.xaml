<Window x:Class="WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI"
        Background="Lavender" Icon="Resources\008-group.png"
        Title="Notebook"
        Height="400" Width="500"
        MinHeight="200" MinWidth="150">
    <DockPanel>

        <DockPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Foreground" Value="Gray"/>
                <Setter Property="Height" Value="24"/>
                <Setter Property="Width" Value="75"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="Focusable" Value="True"/>
                <Style.Triggers>
                    <Trigger Property = "IsMouseOver" Value = "True">
                        <Setter Property = "Foreground" Value = "Green" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="FontStyle" Value="Normal"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontFamily" Value="Arial"/>
            </Style>
            <Style TargetType="MenuItem">
                <Setter Property="FontStyle" Value="Normal"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontFamily" Value="Arial"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>

        </DockPanel.Resources>

        <Grid DockPanel.Dock="Left">
            <Menu Grid.Column="0" Name="MainMenu" VerticalAlignment="Stretch" KeyboardNavigation.TabNavigation="Cycle">
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>

                <MenuItem Name="View">
                    <MenuItem.ToolTip>
                        <ToolTip>
                            View
                        </ToolTip>
                    </MenuItem.ToolTip>
                    <MenuItem.Icon>
                        <Image Source="Resources/007-eye.png" HorizontalAlignment="Center"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Name="New">
                    <MenuItem.ToolTip>
                        <ToolTip>
                            New
                        </ToolTip>
                    </MenuItem.ToolTip>
                    <MenuItem.Icon>
                        <Image Source="Resources/new.png" HorizontalAlignment="Center"/>
                    </MenuItem.Icon>
                    <!--Popup-->
                    <MenuItem Name="Add">
                        <MenuItem.ToolTip>
                            <ToolTip>
                                Add
                            </ToolTip>
                        </MenuItem.ToolTip>
                        <MenuItem.Icon>
                            <Image Source="Resources/005-plus.png" HorizontalAlignment="Center"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <!--/Popup-->
                    <!--Popup-->
                    <MenuItem Name="Load">
                        <MenuItem.ToolTip>
                            <ToolTip>
                                Load
                            </ToolTip>
                        </MenuItem.ToolTip>
                        <MenuItem.Icon>
                            <Image Source="Resources/004-upload-button.png" HorizontalAlignment="Center"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <!--/Popup-->
                </MenuItem>
                <MenuItem Name="Open">
                    <MenuItem.ToolTip>
                        <ToolTip>
                            Open
                        </ToolTip>
                    </MenuItem.ToolTip>
                    <MenuItem.Icon>
                        <Image Source="Resources/001-arrow.png" HorizontalAlignment="Center"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Name="Save">
                    <MenuItem.ToolTip>
                        <ToolTip>
                            Save
                        </ToolTip>
                    </MenuItem.ToolTip>
                    <MenuItem.Icon>
                        <Image Source="Resources/003-download-symbol.png" HorizontalAlignment="Center"/>
                    </MenuItem.Icon>
                </MenuItem>
            </Menu>
        </Grid>

        <Grid DockPanel.Dock="Top">
            <TextBox/>
            <Button  HorizontalAlignment="Right">
                <TextBlock Foreground="Black">Search</TextBlock>
            </Button>
        </Grid>

        <Grid DockPanel.Dock="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="62"/>
                <ColumnDefinition Width="13"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" MinWidth="70" HorizontalAlignment="Center" Text="Name:" />
            <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"/>

            <TextBlock Grid.Row="1" Grid.Column="0" MinWidth="70" HorizontalAlignment="Center" Text="Surname:" />
            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>

            <TextBlock Grid.Row="2" Grid.Column="0" MinWidth="70" HorizontalAlignment="Center" Text="Nickname:" />
            <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"/>

            <TextBlock Grid.Row="3" Grid.Column="0" MinWidth="70" HorizontalAlignment="Center" Text="Birthday:" />
            <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"/>

            <TextBlock Grid.Row="4" Grid.Column="0" MinWidth="70" HorizontalAlignment="Center" Text="Phone:" />
            <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"/>

            <TextBlock Grid.Row="5" Grid.Column="0" MinWidth="70" HorizontalAlignment="Center" Text="Email:" />
            <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"/>

            <TextBlock Grid.Row="6" Grid.Column="0" MinWidth="70" HorizontalAlignment="Center" Text="Mailer:" />
            <TextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2"/>

            <TextBlock Grid.Row="7" Grid.Column="0" MinWidth="70" HorizontalAlignment="Center" Text="Note:" />
            <TextBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2"/>


            <Button Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="2">
                <TextBlock Foreground="Black">Button</TextBlock>
            </Button>

        </Grid>

        <Grid>
            <ListBox Name="ContactsList"></ListBox>
        </Grid>
    </DockPanel>
</Window>          
